<!DOCTYPE html>
<html lang="en-US">
<head>
  <title>Elmorfstore</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<section id="container">
		<header class="main">
			<section id="logo">
				<img src="/assets/logo.png" alt="Logo" />
			</section>
			<nav class="main">
				<ul>
					<li><%= link_to 'Home', root_path %></li>
					<li><%= link_to 'Shopping Cart', shoppingcart_path %></li>
				</ul>
			</nav>
			<nav class="sub">
				<% if current_user %>
					Logged in as <%= current_user.email %>
					<%= link_to "Log out", log_out_path %>
				<% else %>
					<%= link_to "Sign up", sign_up_path %>
					<%= link_to "Sign in", log_in_path %>
				<% end %>
			</nav>
		</header>
		
		<section id="content">
			<% if flash[:notice] %>
		      <section class="notice"><%= flash[:notice] %></section>
		    <% end %>
		    <% if flash[:error] %>
		      <section class="error"><%= flash[:error] %></section>
		    <% end %>
			<%= yield %>
		</section>
	</section>
	<section id="clear_footer">
	
	<footer>
		<section id="footer_amplifier"></section>
		<section id="footer_container">
			<ul>
				<li><%= link_to 'Link', '#'%></li>
				<li><%= link_to 'Link', '#'%></li>
				<li><%= link_to 'Link', '#'%></li>
				<li><%= link_to 'Link', '#'%></li>
				<li><%= link_to 'Link', '#'%></li>
			</ul>
		</section>
		
	</footer>


</body>

</html>
