<section id="shoppingcart">

	<%= render :partial => 'items_in_cart', :collection => @items, :as => 'item' %>
	
	<section id="confirm_summary">
		
		<section class="summary_info">
			<%= span_label 'Sub-total: '%>
			<%= span_value number_to_currency(@cart.total_price) %>
		</section>


		<% unless @order.gst.zero? %>
		<section class="summary_info">
			<%= span_label 'GST:' %>
			<%= span_value "#{tax_percent @order.gst}  #{number_to_currency(@cart.total_with_tax @order.gst)}" %>
		</section>	
		<% end %>

		<% unless @order.pst.zero? %>
		<section class="summary_info">
			<%= span_label 'PST:' %>
			<%= span_value "#{tax_percent @order.pst}  #{number_to_currency(@cart.total_with_tax @order.pst)}" %>
		</section>
		<% end %>
		<% unless @order.hst.zero? %>
		<section class="summary_info">
			<%= span_label 'HST' %>
			<%= span_value "#{tax_percent @order.hst}  #{number_to_currency(@cart.total_with_tax @order.hst)}" %>
		</section>
		

		<% end %>

		<section class="summary_info">
			<%= span_label 'Grand-total: '%>
			<%= span_value number_to_currency(@grand_total) %>
		</section>

	</section>
	<section class="confirm_link">
		<%= link_to 'Confirm Order', save_order_path %>
	</section>
	


</section>