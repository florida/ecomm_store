<% content_for :title do %>Shopping Cart<% end %>
<header class="shoppingcart">
	<h1>Display Cart Check</h1>
</header>
<section id="shoppingcart">
	

	
	
	<%= render :partial => 'items_in_cart', :collection => @items, :as => 'item' %>
	<section class="shopping_cart_summary">
		<section class="summary_info">
			<%= span_label 'Cart Contains: '%>
			<%= span_value pluralize @items.size, 'item' %>
		</section>

		<section class="summary_info">
			<%= span_label 'Total: ' %>
			<%= span_value number_to_currency @cart.total_price%></section>
		</section>


		<section class="checkoutlinks">
			<nav>
				<ul>
					<li><%= link_to 'Continue shopping', store_path %></li>
					<li><%= link_to 'Empty cart', store_path, :method => :delete %></li>
					<li><%= link_to 'Checkout', checkout_path %></li>
				</ul>
			</nav>
		</section>

	</section>
