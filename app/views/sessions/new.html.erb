<section id="login">
	<header>
		<h1>Login</h1>
	</header>
	<%= form_tag sessions_path do %>
	
		<section class="field"><%= label_tag :email %>
			<%= text_field_tag :email, params[:email] %>
		</section>
	
		<section class="field">
			<%= label_tag :password %>
			<%= password_field_tag :password %>
		</section>
	
		<section class="field">
			<%= submit_tag "Log in", :id => "submit" %>
		</section>
	<% end %>
</section>